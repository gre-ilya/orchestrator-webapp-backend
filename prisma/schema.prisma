// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email          String   @id @db.VarChar(128)
  password   String   @db.VarChar(256)
  role           UserRole @default(User)
  isActivated    Boolean  @default(false)
  activationLink String?  @db.VarChar(256)

  refreshTokens RefreshToken[]
  projects      Project[]
}

model RefreshToken {
  jti       String   @id @db.VarChar(255)
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
  deviceId  String   @db.Uuid()

  user      User   @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String
}

model Project {
  id   String @id @default(uuid()) @db.Uuid()
  name String @db.VarChar(128)

  user      User      @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail String
  services  Service[]
}

model Service {
  id              String           @id @default(uuid()) @db.Uuid()
  name            String           @db.VarChar(128)
  repository      String           @db.VarChar(256)
  builderTemplate Int?
  buildCommand    String?          @db.VarChar(128)
  deployCommand   String?          @db.VarChar(128)
  ip              String?          @db.VarChar(15)
  port            Int?
  status          DeploymentStatus @default(Disabled)
  variables       Json?

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String       @db.Uuid()
  deployments Deployment[]
}

model Deployment {
  id         String           @id @default(uuid()) @db.Uuid()
  buildLogs  String?           @db.VarChar(32768)
  deployLogs String?           @db.VarChar(32768)
  status     DeploymentStatus @default(Starting)
  buildDate  DateTime         @default(now())

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String  @db.Uuid()
}

enum UserRole {
  User
  Admin
}

enum DeploymentStatus {
  Disabled
  Starting
  Building
  Deploying
  Running
}
